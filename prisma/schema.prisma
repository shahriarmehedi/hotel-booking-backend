// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(auto()) @map("_id") @db.ObjectId
  username    String?
  email       String        @unique
  name        String?
  password    String
  role        String        @default("USER")
  HotelReview HotelReview[]
}

model HotelReview {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  hotelName String
  hotelId   String
  rating    Int
  title     String
  review    String
  user      User     @relation(fields: [userId], references: [id])
  userId    String   @db.ObjectId
  createdAt DateTime @default(now())
  Hotel     Hotel    @relation(fields: [hotelId], references: [id])
}

model Amenities {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  price       String
  free        Boolean?
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Hotel {
  id               String        @id @default(auto()) @map("_id") @db.ObjectId
  name             String
  description      String?
  rating           String
  slug             String?
  language         String[]
  halalRatingTotal String
  halalRating      Json
  amenities        Json
  price            String
  image            String?
  gallery          String[]
  location         String
  city             String
  address          String
  country          String
  createdAt        DateTime      @default(now())
  updatedAt        DateTime      @updatedAt
  hotelReview      HotelReview[]
  thumbnail        String?
  hotelRoom        Json
  roomType         Json
}

model HalalRating {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  addedBy     String?
  percentage  String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model HotelRoom {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  size        String
  adults      Int
  children    Int
  price       String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String?
}

model RoomType {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String?
  price        String
  bed          String
  meals        String
  cancellation String
  payment      String[]
  image        String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  thumbnail    String
}

model Booking {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String
  price       String
  image       String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String
}

model Activities {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       String
  image       String
  halalRating String
  instantConf Boolean  @default(false)
  freeCancel  Boolean  @default(false)
  date        String
  adults      Int
  children    Int
  rating      String   @default("0")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String?
}

model Transfers {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  route       String
  vehicles    Int
  name        String
  description String?
  price       String
  image       String
  vehicleType String
  rating      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String?
}

model Insurances {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       String
  image       String
  rating      String
  instantConf Boolean  @default(false)
  freeCancel  Boolean  @default(false)
  halalRating String
  area        String
  package     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String?
}

model HolidayPackages {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  price       String
  image       String
  rating      String
  instantConf Boolean  @default(false)
  freeCancel  Boolean  @default(false)
  halalRating String
  area        String?
  duration    String
  package     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  thumbnail   String?
}
